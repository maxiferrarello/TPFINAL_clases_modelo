<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ColorearDibujoController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: white;">

    <!-- TOP: Título -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #f5f5f5; -fx-padding: 15 20; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
            <Label fx:id="lblTitulo" text="Colorear Dibujo" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnVolver" text="Volver" onAction="#handleVolver" style="-fx-background-color: #999; -fx-text-fill: white; -fx-padding: 8 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- LEFT: Info -->
    <left>
        <VBox spacing="20" prefWidth="200" style="-fx-padding: 20; -fx-background-color: #fafafa; -fx-border-color: #ddd; -fx-border-width: 0 1 0 0;">

            <!-- Info del dibujo -->
            <VBox spacing="5">
                <Label text="Dibujo:" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
                <Label fx:id="lblNombreDibujo" text="---" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Tamaño:" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
                <Label fx:id="lblTamanioDibujo" text="16x16" style="-fx-font-size: 13px;"/>
            </VBox>

            <Separator/>

            <!-- Herramientas -->
            <VBox spacing="8">
                <Label text="Herramientas:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                <HBox spacing="5">
                    <ToggleButton fx:id="btnHerramientaPintar" text="Pintar" selected="true" style="-fx-padding: 5 10;"/>
                    <ToggleButton fx:id="btnHerramientaBorrar" text="Borrar" style="-fx-padding: 5 10;"/>
                </HBox>
            </VBox>

            <Separator/>

            <!-- Color seleccionado -->
            <VBox spacing="5">
                <Label text="Color seleccionado:" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Region fx:id="regionColorActual" prefWidth="30" prefHeight="30" style="-fx-border-color: #999; -fx-border-width: 2;"/>
                    <Label fx:id="lblColorActual" text="#FF0000" style="-fx-font-family: monospace; -fx-font-size: 11px;"/>
                </HBox>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Progreso SIN BARRA -->
            <VBox spacing="8" style="-fx-background-color: #e8f5e9; -fx-padding: 10; -fx-border-color: #4caf50; -fx-border-width: 1;">
                <Label text="Progreso:" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                <Label fx:id="lblPixelesColoreados" text="0 / 0" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
            </VBox>

            <!-- Botones -->
            <VBox spacing="8">
                <Button fx:id="btnLimpiar" text="Limpiar Todo" onAction="#handleLimpiar" maxWidth="Infinity"
                        style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-padding: 8 0; -fx-font-weight: bold;"/>
            </VBox>

        </VBox>
    </left>

    <!-- CENTER: Canvas -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20; -fx-alignment: center;">

            <!-- Canvas -->
            <ScrollPane fx:id="scrollCanvas" fitToWidth="false" fitToHeight="false" VBox.vgrow="ALWAYS"
                        style="-fx-background-color: white;">
                <StackPane fx:id="stackCanvas" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20;">
                    <GridPane fx:id="gridCanvas"/>
                </StackPane>
            </ScrollPane>

            <!-- Opciones -->
            <HBox spacing="15" alignment="CENTER">
                <CheckBox fx:id="chkMostrarGrid" text="Mostrar Grid" selected="true" onAction="#handleToggleGrid"/>
                <CheckBox fx:id="chkMostrarPlantilla" text="Mostrar Plantilla" selected="true" onAction="#handleTogglePlantilla"/>
            </HBox>

        </VBox>
    </center>

    <!-- BOTTOM: Paleta de colores -->
    <bottom>
        <VBox spacing="10" style="-fx-background-color: #fafafa; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Paleta de Colores:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                <Label fx:id="lblCantidadColores" text="0 colores" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            </HBox>

            <GridPane fx:id="gridPaletaColores" hgap="8" vgap="8" alignment="CENTER" style="-fx-padding: 5;"/>

        </VBox>
    </bottom>

    <!-- HIDDEN: Elements still needed by controller -->
    <right>
        <VBox visible="false" managed="false">
            <GridPane fx:id="gridPreview"/>
            <Label fx:id="lblEstadoDibujo"/>
            <Label fx:id="lblMensajeEstado"/>
            <Label fx:id="lblEstado"/>
            <Label fx:id="lblUltimaAccion"/>
            <Label fx:id="lblIndiceColor"/>
        </VBox>
    </right>

</BorderPane>
