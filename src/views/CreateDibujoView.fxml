<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.CreateDibujoController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: white;">

    <!-- TOP -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #f5f5f5; -fx-padding: 15 20; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
            <Label fx:id="lblTitulo" text="Crear Nuevo Dibujo" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnVolver" text="Volver" onAction="#handleVolver" style="-fx-background-color: #999; -fx-text-fill: white; -fx-padding: 8 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- LEFT -->
    <left>
        <VBox spacing="20" prefWidth="250" style="-fx-padding: 20; -fx-background-color: #fafafa; -fx-border-color: #ddd; -fx-border-width: 0 1 0 0;">

            <!-- Nombre -->
            <VBox spacing="5">
                <Label text="Nombre del Dibujo:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                <TextField fx:id="txtNombreDibujo" promptText="Ej: Casa Simple"/>
            </VBox>

            <!-- Tamaño -->
            <VBox spacing="5">
                <Label text="Tamaño:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="cmbTamanio" onAction="#handleCambiarTamanio" maxWidth="Infinity"/>
                <Label fx:id="lblInfoTamanio" text="0 píxeles" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            </VBox>

            <Separator/>

            <!-- Herramientas -->
            <VBox spacing="8">
                <Label text="Herramientas:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                <HBox spacing="5">
                    <ToggleButton fx:id="btnHerramientaPintar" text="Pintar" selected="true" style="-fx-padding: 5 10;"/>
                    <ToggleButton fx:id="btnHerramientaBorrar" text="Borrar" style="-fx-padding: 5 10;"/>
                </HBox>
            </VBox>

            <Separator/>

            <!-- Color actual -->
            <VBox spacing="5">
                <Label text="Color seleccionado:" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Region fx:id="regionColorActual" prefWidth="30" prefHeight="30" style="-fx-border-color: #999; -fx-border-width: 2;"/>
                    <Label fx:id="lblColorActual" text="#000000" style="-fx-font-family: monospace; -fx-font-size: 11px;"/>
                </HBox>
            </VBox>

            <Separator/>

            <!-- Paleta -->
            <VBox spacing="8">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Paleta:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnAgregarColor" text="+ Color" onAction="#handleAgregarColor" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 10px; -fx-padding: 5 10;"/>
                </HBox>

                <GridPane fx:id="gridPaletaColores" hgap="5" vgap="5" style="-fx-background-color: #f5f5f5; -fx-padding: 10;"/>

                <Label fx:id="lblCantidadColores" text="0 colores" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Botones -->
            <VBox spacing="8">
                <Button fx:id="btnGuardar" text="Guardar Dibujo" onAction="#handleGuardar" maxWidth="Infinity"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 0;"/>
                <Button fx:id="btnLimpiar" text="Limpiar Canvas" onAction="#handleLimpiar" maxWidth="Infinity"
                        style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 0;"/>
            </VBox>

        </VBox>
    </left>

    <!-- CENTER -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20; -fx-alignment: center;">

            <CheckBox fx:id="chkMostrarGrid" text="Mostrar Grid" selected="true" onAction="#handleToggleGrid"/>

            <ScrollPane fx:id="scrollCanvas" fitToWidth="false" fitToHeight="false" VBox.vgrow="ALWAYS"
                        style="-fx-background-color: white;">
                <StackPane fx:id="stackCanvas" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20;">
                    <GridPane fx:id="gridCanvas"/>
                </StackPane>
            </ScrollPane>

        </VBox>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #f5f5f5; -fx-padding: 10 20; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
            <Label fx:id="lblEstado" text="Listo" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblPixelesMarcados" text="0 píxeles marcados" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
        </HBox>
    </bottom>

    <!-- HIDDEN -->
    <right>
        <VBox visible="false" managed="false">
            <GridPane fx:id="gridPreview"/>
            <Label fx:id="lblPorcentajeLleno"/>
            <Label fx:id="lblUltimaAccion"/>
        </VBox>
    </right>

</BorderPane>
